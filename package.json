{
  "name": "span-query",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ophiryael/span-query.git"
  },
  "author": "Ophir Yael (https://github.com/ophiryael)",
  "private": true,
  "scripts": {
    "dev": "tsc && concurrently -n \"ts,nodemon\" -c \"bgBlue,bgGreen\" \"tsc -w\" \"nodemon ./dist/src/index.js\"",
    "lint": "eslint --ext .js,.ts --max-warnings 0 ./src",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts,json}": [
      "yarn lint",
      "yarn format"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  }
}
